<!-- app/views/groups/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <%= link_to @organization, class: "text-blue-500 hover:text-blue-700 flex items-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to <%= @organization.name %>
    <% end %>
  </div>
  
  <div id="flash_messages" class="mb-4"></div>
  <h1 class="text-3xl font-bold mb-6">Groups/Areas for <%= @organization.name %></h1>
  
  <div id="new_group" class="mb-8">
    <%= render "form", organization: @organization, group: @new_group %>
  </div>
  
  <div id="groups" class="space-y-4">
    <% if @groups.any? %>
      <%= render partial: "group", collection: @groups, locals: { organization: @organization } %>
    <% else %>
      <p class="text-gray-500 text-center py-4 bg-white rounded-lg shadow">No groups defined yet. Create groups to categorize your tasks!</p>
    <% end %>
  </div>
</div>