<!-- app/views/groups/_form.html.erb -->
<%= turbo_frame_tag dom_id(group, :form) do %>
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold mb-4"><%= group.new_record? ? "Create New Group/Area" : "Edit Group/Area" %></h2>
    
    <%= form_with model: [organization, group] do |form| %>
      <% if group.errors.any? %>
        <div class="mb-4 p-4 bg-red-100 text-red-800 rounded">
          <h3 class="font-semibold">Errors:</h3>
          <ul class="list-disc pl-5">
            <% group.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="mb-4">
        <%= form.label :name, class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_field :name, class: "w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <div class="mb-4">
        <%= form.label :description, class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_area :description, rows: 3, class: "w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <div class="flex justify-end space-x-2">
        <% unless group.new_record? %>
          <%= link_to "Cancel", organization_groups_path(organization), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200" %>
        <% end %>
        <%= form.submit group.new_record? ? "Create Group" : "Update Group", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>
<% end %>