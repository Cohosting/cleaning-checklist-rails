<%= turbo_stream.update dom_id(@section, :groups) do %>
  <% if @section.section_groups.any? %>
    <%= render partial: "section_groups/section_group", collection: @section.section_groups, 
               locals: { organization: @organization, checklist: @checklist, section: @section } %>
  <% else %>
    <div id="<%= dom_id(@section, :no_groups) %>" class="flex mb-3">
      <p class="text-gray-500 text-sm py-2 px-3 rounded-full border border-gray-200">
        No groups yet. Add your first group above!
      </p>
    </div>
  <% end %>
<% end %>

<%= turbo_stream.update dom_id(@target_section, :groups) do %>
  <%= render partial: "section_groups/section_group", collection: @target_section.section_groups, 
             locals: { organization: @organization, checklist: @checklist, section: @target_section } %>
<% end %>

<%= turbo_stream.remove dom_id(@target_section, :no_groups) %>
