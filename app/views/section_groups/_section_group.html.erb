<!-- app/views/section_groups/_section_group.html.erb -->
<%= turbo_frame_tag dom_id(section_group) do %>
  <div class="bg-white pl-6 mb-2" data-controller="group" data-group-target="container" data-section-group-drag-target="item" data-id="<%= section_group.id %>">
    <div class="flex justify-between items-center py-1">
      <div class="flex items-center">
        <div class="cursor-move mr-2" data-section-group-drag-target="handle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
          </svg>
        </div>
        
        <h4 class="text-sm font-medium text-amber-700 bg-amber-50 py-1 px-2 rounded">
          <%= section_group.group.name %>
        </h4>
      </div>
      
      <div class="flex space-x-2">
        <button type="button" data-action="click->group#toggleCollapse" data-group-target="collapseBtn" class="text-gray-500 hover:text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
          </svg>
        </button>
        
        <%= button_to organization_checklist_section_section_group_path(organization, checklist, section, section_group), 
                      method: :delete, 
                      class: "text-gray-500 hover:text-gray-700", 
                      form: { data: { turbo_confirm: "Are you sure? This will delete all tasks in this group." } } do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
        <% end %>
      </div>
    </div>
    
    <div class="pl-6 group-content" data-group-target="content">
      <div id="new_task_form_section_group_<%= section_group.id %>" class="mb-3">
        <%= render "tasks/form", organization: organization, checklist: checklist, section: section, section_group: section_group, task: Task.new %>
      </div>
      
      <div id="<%= dom_id(section_group, :tasks) %>" class="space-y-2" 
           data-controller="task-drag" 
           data-task-drag-section-group-id-value="<%= section_group.id %>"
           data-task-drag-section-id-value="<%= section.id %>"
           data-task-drag-checklist-id-value="<%= checklist.id %>"
           data-task-drag-organization-id-value="<%= organization.id %>">
<% if section_group.tasks.any? %>
  <%= render partial: "tasks/task", collection: section_group.tasks, 
             locals: { organization: organization, checklist: checklist, section: section, section_group: section_group } %>
<% else %>
  <div id="<%= dom_id(section_group, :empty_state) %>" class="flex mb-3">
    <p class="text-gray-500">No tasks yet. Add your first task above!</p>
  </div>
<% end %>
      </div>
    </div>
  </div>
<% end %>