<!-- app/views/checklists/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">My Checklists</h1>
  
  <div id="flash_messages" class="mb-4"></div>
  
  <!-- Form to create a new checklist -->
  <div id="new_checklist" class="mb-8">
    <%= render "form", checklist: Checklist.new %>
  </div>
  
  <!-- Grid to display existing checklists -->
  <div id="checklists" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @checklists.reject(&:new_record?).each do |checklist| %>
      <%= render partial: "checklist", locals: { checklist: checklist, organization: @organization } %>
    <% end %>
  </div>
</div>
