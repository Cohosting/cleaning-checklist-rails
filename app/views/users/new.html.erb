<h1>Sign Up</h1>

<% if flash[:alert] %>
  <div style="color: red;">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if @user.errors.any? %>
  <div style="color: red;">
    <h3><%= pluralize(@user.errors.count, "error") %> prevented this signup:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: users_path, method: :post do |f| %>
  <% if @invitation %>
    <p>Youâ€™ve been invited to join <strong><%= @invitation.organization.name %></strong>.</p>
    <input type="hidden" name="token" value="<%= @invitation.token %>">
  <% end %>

  <div>
    <label>Email</label>
    <%= f.email_field :email_address, required: true %>
  </div>

  <div>
    <label>Password</label>
    <%= f.password_field :password, required: true %>
  </div>

  <%= f.submit "Sign Up" %>
<% end %>
