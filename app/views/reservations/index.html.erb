<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Reservation List</h1>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-300">
      <thead>
        <tr>
          <th class="py-2 px-4 border-b">Guest Name</th>
          <th class="py-2 px-4 border-b">Arrival Date</th>
          <th class="py-2 px-4 border-b">Departure Date</th>
          <th class="py-2 px-4 border-b">Nights</th>
          <th class="py-2 px-4 border-b">Status</th>
          <th class="py-2 px-4 border-b">Action</th>
        </tr>
      </thead>
      <tbody>
        <% if @reservations.any? %>
          <% @reservations.each do |reservation| %>
            <tr class="hover:bg-gray-100">
              <td class="py-2 px-4 border-b"><%= "#{reservation.guest.first_name} #{reservation.guest.last_name}" %></td>
              <td class="py-2 px-4 border-b"><%= reservation.arrival_date.strftime('%B %d, %Y') %></td>
              <td class="py-2 px-4 border-b"><%= reservation.departure_date.strftime('%B %d, %Y') %></td>
              <td class="py-2 px-4 border-b"><%= reservation.nights %></td>
              <td class="py-2 px-4 border-b"><%= reservation.status %></td>
              <td class="py-2 px-4 border-b">
<%= link_to 'Upsell', upsells_property_reservation_path(@property, reservation), class: 'bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded' %>


              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="py-2 px-4 text-center text-gray-500">No reservations found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>