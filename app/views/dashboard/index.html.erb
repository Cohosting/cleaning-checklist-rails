<div class="dashboard-container">
  <%# flash and error messages %>
  <% if notice %>
    <p class="text-green-500 bg-green-100 border border-green-400 rounded p-2 mb-4"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="text-red-500 bg-red-100 border border-red-400 rounded p-2 mb-4"><%= alert %></p>
  <% end %>

  <div class="dashboard-header">
    <h1 class="dashboard-title">Properties</h1>
    <%= link_to new_organization_property_path(@organization), class: "add-property-btn" do %>
      <i class="fas fa-plus mr-2"></i>
      Add Property
    <% end %>


                 <%= link_to organization_upsells_path(@organization), class: "action-link" do %>
            View upsell (<%= @organization.upsells.count %>)
          <% end %>
  </div>

  <div class="properties-grid">
    <% @properties.each do |property| %>
      <div class="property-card">
        <div class="property-header-list">
          <div>
            <h2 class="property-name bg-red"><%= property.name %></h2>
            <p class="property-address">
              <i class="fas fa-home"></i>
              <%= property.address %>
            </p>
          </div>
        </div>

        <div class="property-actions">
          <%= link_to organization_property_jobs_path(@organization, property), class: "action-link" do %>
            View Jobs (<%= property.jobs.count %>)
          <% end %>
          
          <%= link_to organization_checklists_path(@organization), class: "action-link" do %>
            Checklist
            <% if property.default_checklist.present? %>
              (<%= property.checklists.count %>)
            <% else %>
              (None)
            <% end %>
          <% end %>

          <%= link_to organization_property_reservations_path(@organization, property), class: "action-link" do %>
            View reservation (<%= property.reservations.count %>)
          <% end %>

        </div>
      </div>
    <% end %>
  </div>
</div>


