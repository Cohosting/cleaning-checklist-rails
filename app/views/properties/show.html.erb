<div class="property-container">
  <h2 class="property-header">Property: <%= @property.name %></h2>
  <p class="property-info"><strong>Address:</strong> <%= @property.address %></p>

  <h3>Checklists</h3>
  <ul class="checklist-list">
    <% @property.checklists.each do |checklist| %>
      <li class="checklist-item">
        <%= link_to checklist.name, property_checklist_path(@property, checklist), class: "btn" %>
        <span>
          (<%= checklist.completed? ? '✅ Completed' : '⏳ In Progress' %>)
        </span>
      </li>
    <% end %>
  </ul>

  <%= link_to 'New Checklist', new_property_checklist_path(@property), class: "btn" %>
</div>
