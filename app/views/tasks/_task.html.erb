<!-- app/views/tasks/_task.html.erb -->
<%= turbo_frame_tag dom_id(task) do %>
  <div class="flex items-center py-1.5 px-1 hover:bg-gray-50 transition-colors duration-150"
       data-task-drag-target="item"
       data-id="<%= task.id %>">
    <div class="cursor-move mr-1.5" data-task-drag-target="handle">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5 text-gray-400">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </div>
    
    <%= button_to toggle_organization_checklist_section_section_group_task_path(organization, checklist, section, section_group, task), 
                  method: :patch, 
                  class: "mr-2 flex-shrink-0" do %>
      <% if task.completed %>
        <svg class="w-4 h-4 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      <% else %>
        <svg class="w-4 h-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <rect x="5" y="5" width="14" height="14" rx="2" stroke-width="2" />
        </svg>
      <% end %>
    <% end %>
    
    <span class="flex-grow text-sm <%= task.completed ? 'line-through text-gray-500' : 'text-gray-800' %>">
      <%= task.content %>
    </span>
    
    <div class="flex space-x-1 opacity-0 group-hover:opacity-100 transition-opacity duration-150">
      <%= link_to edit_organization_checklist_section_section_group_task_path(organization, checklist, section, section_group, task), 
                  class: "text-gray-500 hover:text-gray-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
        </svg>
      <% end %>
      
      <%= button_to organization_checklist_section_section_group_task_path(organization, checklist, section, section_group, task), 
                    method: :delete, 
                    class: "text-gray-500 hover:text-gray-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
        </svg>
      <% end %>
    </div>
  </div>
<% end %>