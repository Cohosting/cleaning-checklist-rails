<% content_for :title, "Showing upsell" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing upsell</h1>

  <%= render @upsell %>

  <%= link_to "Edit this upsell", edit_property_upsell_path(@property,@upsell), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to upsells", property_upsells_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this upsell", 
                  property_upsell_path(@property,@upsell)      , method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>


  <%= button_to "Buy Now", checkout_property_upsell_path(@property, @upsell), data: { turbo: false }, class: "button" %>


</div>
