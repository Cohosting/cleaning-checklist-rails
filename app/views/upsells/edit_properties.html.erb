<!-- app/views/upsells/edit_properties.html.erb -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="mb-6">

<div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">

  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Upsell Details</h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">View details of the upsell.</p>
      <p class="text-gray-700 font-medium mb-2">Name: <%= @upsell.title %></p>
  <p class="text-gray-700">Description: <%= @upsell.description %></p>


  </div>


</div>

  <h1 class="text-2xl font-bold mb-6">Select Properties for <%= @upsell.title %></h1>

  <div class="flex justify-between items-center mb-6">
    <%= form_with url: edit_properties_organization_upsell_path(@organization, @upsell), method: :get, local: false, 
                  class: 'w-full max-w-md', data: { controller: "search" } do |f| %>
      <div class="relative">
        <%= f.text_field :search, placeholder: "Search...", value: params[:search], 
                        class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                        data: { action: "input->search#debounce" } %>
        <div class="absolute inset-y-0 right-0 flex items-center pr-3">
          <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>
    <% end %>
    
    <% if params[:search].present? %>
      <%= link_to "Clear search", edit_properties_organization_upsell_path(@organization, @upsell), 
                  class: "text-blue-600 hover:text-blue-800 font-medium" %>
    <% end %>
  </div>

  <%= form_with url: update_properties_organization_upsell_path(@organization, @upsell), method: :patch, 
                data: { controller: "property-selection" } do |f| %>
                
    <div class="flex justify-between items-center mb-4">
      <div class="flex space-x-2">
        <button type="button" id="select-all-btn" 
            class="px-3 py-1 text-sm bg-blue-100 text-blue-700 rounded-md hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-blue-500">
          Select All
        </button>
        <button type="button" id="clear-all-btn"
            class="px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500">
          Clear All
        </button>
      </div>
      
      <div class="text-sm text-gray-500">
        <span id="selected-count"><%= @selected_property_ids.size %></span> of <%= @properties.count %> selected
      </div>
    </div>
    
    <div class="mb-6" id="properties-list">
      <%= render partial: 'property_list', locals: { 
        properties: @properties, 
        selected_property_ids: @selected_property_ids 
      } %>
    </div>
    
    <div class="flex space-x-4">
      <%= f.submit "Save", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      <%= link_to "Cancel", organization_upsell_path(@organization, @upsell), class: "px-4 py-2 bg-white border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>