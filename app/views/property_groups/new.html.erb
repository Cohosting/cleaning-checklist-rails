<%# app/views/property_groups/new.html.erb %>
<%= turbo_frame_tag "add_area_form" do %>
  <div class="bg-white shadow sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Add Area</h3>
      
      <% if @property_group.errors.any? %>
        <div class="rounded-md bg-red-50 p-4 mt-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@property_group.errors.count, "error") %> prohibited this area from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @property_group.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      <%= form_with(url: organization_property_property_groups_path(@property.organization, @property), 
                   model: @property_group, class: "mt-5", data: { turbo: true }) do |f| %>
        
        <div class="mb-4">
          <%= f.label :group_id, "Area Type", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <% if @available_groups.any? %>
              <%= f.collection_select :group_id, @available_groups, :id, :name, 
                                     { prompt: "Select an area type" }, 
                                     { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
            <% else %>
              <p class="text-sm text-yellow-600">All available areas have been added to this property.</p>
            <% end %>
          </div>
        </div>
        
        <div class="mb-4">
          <%= f.label :quantity, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.number_field :quantity, min: 1, value: 1, 
                              class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
        
        <div class="mt-5 flex items-center justify-end space-x-3">
          <%= link_to "Cancel", organization_property_path(@property.organization, @property), 
                     class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                     data: { turbo_frame: "_top" } %>
          
          <% if @available_groups.any? %>
            <%= f.submit "Add", 
                        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>