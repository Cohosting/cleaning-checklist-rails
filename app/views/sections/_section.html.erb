<%= turbo_frame_tag dom_id(section) do %>
  <div class="bg-white rounded-md mb-4" 
       data-drag-target="item" 
       data-id="<%= section.id %>"
       data-controller="section"
       data-section-organization-id-value="<%= organization.id %>"
       data-section-checklist-id-value="<%= checklist.id %>"
       data-section-section-id-value="<%= section.id %>">
    <div class="py-2 px-3">
      <div class="flex justify-between items-center">
        <div class="flex items-center">
          <div class="cursor-move mr-2" data-drag-target="handle">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-gray-400">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
            </svg>
          </div>
          
          <div class="flex items-center">
            <div class="w-5 h-5 rounded-full bg-pink-200 mr-2"></div>
            <h3 class="text-base font-medium text-blue-500">
              <%= section.title %>
            </h3>
          </div>
        </div>
        
        <div class="flex space-x-2">
          <div class="text-sm text-gray-500">0/1 completed</div>
          
          <!-- Add Group Button -->
          <button type="button" data-action="click->section#toggleGroupForm" class="text-gray-500 hover:text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
          </button>
          
          <button type="button" data-action="click->section#toggleCollapse" data-section-target="collapseBtn" class="text-gray-500 hover:text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
            </svg>
          </button>
          
          <%= link_to edit_organization_checklist_section_path(organization, checklist, section), class: "text-gray-500 hover:text-gray-700" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
            </svg>
          <% end %>
          
          <%= button_to organization_checklist_section_path(organization, checklist, section), method: :delete, class: "text-gray-500 hover:text-gray-700", form: { data: { turbo_confirm: "Are you sure? This will delete all groups and tasks in this section." } } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="pl-11 pr-3 pb-3 section-content" data-section-target="content">
      <!-- Group Form (initially hidden) -->
      <div class="mb-3 hidden" data-section-target="groupForm">
        <%= render "section_groups/add_form", organization: organization, checklist: checklist, section: section %>
      </div>
      
      <div id="<%= dom_id(section, :groups) %>" class="space-y-2" 
           data-controller="section-group-drag" 
           data-section-group-drag-section-id-value="<%= section.id %>"
           data-section-group-drag-checklist-id-value="<%= checklist.id %>"
           data-section-group-drag-organization-id-value="<%= organization.id %>"
           data-section-group-drag-url-value="<%= move_organization_checklist_section_section_groups_path(organization, checklist, section) %>">
        <% if section.section_groups.any? %>
          <%= render partial: "section_groups/section_group", collection: section.section_groups, 
                     locals: { organization: organization, checklist: checklist, section: section } %>
        <% else %>
          <div class="flex mb-3">
            <p class="text-gray-500 text-sm py-2 px-3 rounded-full border border-gray-200">No groups yet. Add your first group above!</p>
          </div>
         
        <% end %>
      </div>
    </div>
  </div>
<% end %>